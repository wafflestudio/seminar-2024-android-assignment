<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/backdropFrame"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backdropImageView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            android:src="@drawable/slack_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000" />

    </FrameLayout>

    <ImageView
        android:id="@+id/posterImageView"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/slack_img"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toStartOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="20dp"
        android:outlineProvider="bounds"
        android:clipToOutline="false"
        />


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/rating"
        app:layout_constraintStart_toEndOf="@id/posterImageView"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:max="5"
        android:stepSize="0.5"
        android:rating="0"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="100dp"
        android:progressTint="@android:color/holo_orange_light"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintTop_toTopOf="@id/rating"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:layout_constraintEnd_toEndOf="@id/titleTextView"
        app:layout_constraintBottom_toBottomOf="@id/posterImageView"
        android:scaleX="0.8"
        android:scaleY="0.8"
        />

    <TextView
        android:id="@+id/rating"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:text="rating"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"

        app:layout_constraintStart_toStartOf="@id/titleTextView"
        app:layout_constraintBottom_toBottomOf="@id/posterImageView"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/genreRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:padding="8dp"
        android:scrollbars="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/posterImageView"
        tools:listitem="@layout/item_genre" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/infoRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/genreRecyclerView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_movie_info" />

</androidx.constraintlayout.widget.ConstraintLayout>
